<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.tgt_proyecto.NuevoClienteController"
            styleClass="main-background">

    <!-- Barra lateral de navegación -->
    <left>
        <VBox styleClass="sidebar">
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="sidebar-logo">
                <ImageView fx:id="logo" fitWidth="50" fitHeight="50" pickOnBounds="true" preserveRatio="true">
                    <Image url="@Images/logo.jpg"/>
                </ImageView>
                <Label text="TGT | EQUIPMENTS" styleClass="sidebar-title"/>
            </HBox>

            <HBox style="-fx-background-color: white; -fx-pref-height: 2px;"/>

            <VBox spacing="15" alignment="TOP_LEFT" styleClass="menu">
                <Region fx:id="topSpacer" VBox.vgrow="NEVER" style="-fx-pref-height: 5;"/>

                <!-- Botones de la barra de navegación -->
                <HBox spacing="10">
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="@icons/inicio.png"/>
                    </ImageView>
                    <Button text="Inicio" styleClass="nav-button" onAction="#handleInicio"/>
                </HBox>
                <HBox spacing="10">
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="@icons/maquinaria.png"/>
                    </ImageView>
                    <Button text="Maquinaria" styleClass="nav-button" onAction="#handleMaquinaria"/>
                </HBox>
                <HBox spacing="10">
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="@icons/empleados.png"/>
                    </ImageView>
                    <Button text="Empleados" styleClass="nav-button" onAction="#handleEmpleados"/>
                </HBox>
                <HBox spacing="10">
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="@icons/clientes.png"/>
                    </ImageView>
                    <Button text="Clientes" styleClass="nav-button nav-button-active" fx:id="clientesButton" onAction="#handleClientes"/>
                </HBox>
                <HBox spacing="10">
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="@icons/proveedores.png"/>
                    </ImageView>
                    <Button text="Proveedores" styleClass="nav-button" onAction="#handleProveedores"/>
                </HBox>
                <HBox spacing="10">
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="@icons/mantenimiento.png"/>
                    </ImageView>
                    <Button text="Mantenimiento" styleClass="nav-button" onAction="#handleMantenimiento"/>
                </HBox>
                <HBox spacing="10">
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="@icons/inventario.png"/>
                    </ImageView>
                    <Button text="Inventario" styleClass="nav-button" onAction="#handleInventario"/>
                </HBox>
                <HBox spacing="10">
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="@icons/compras.png"/>
                    </ImageView>
                    <Button text="Compras" styleClass="nav-button" onAction="#handleCompras"/>
                </HBox>
                <HBox spacing="10">
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="@icons/ventas.png"/>
                    </ImageView>
                    <Button text="Ventas" styleClass="nav-button" onAction="#handleVentas"/>
                </HBox>
                <HBox spacing="10">
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="@icons/configuracion.png"/>
                    </ImageView>
                    <Button text="Configuración" styleClass="nav-button" onAction="#handleConfiguracion"/>
                </HBox>
            </VBox>

            <HBox style="-fx-background-color: white; -fx-pref-height: 2px;"/>
            <Region VBox.vgrow="ALWAYS"/>
            <HBox spacing="10">
                <ImageView fitWidth="24" fitHeight="24">
                    <Image url="@icons/cerrar_sesion.png"/>
                </ImageView>
                <Button fx:id="cerrarSesionButton" text="Cerrar sesión" styleClass="nav-button"/>
            </HBox>
        </VBox>
    </left>

    <!-- Contenido principal -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" styleClass="dashboard-content">
            <HBox alignment="CENTER" spacing="20">
                <ImageView fx:id="backgroundImage" fitWidth="1550" fitHeight="150">
                    <Image url="@Images/dashboard1.png"/>
                </ImageView>
            </HBox>

            <!-- Formulario para añadir nuevo cliente -->
            <VBox spacing="10" alignment="TOP_CENTER" styleClass="clients-list">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Añadir nuevo cliente" styleClass="section-title"/>
                    <ImageView fx:id="iconClient" fitWidth="24" fitHeight="24">
                        <Image url="@icons/user.png"/>
                    </ImageView>
                </HBox>

                <Label text="Por favor ingrese la información del nuevo cliente" styleClass="form-label"/>

                <VBox spacing="10">
                    <HBox spacing="20">
                        <Label text="Nombre"/>
                        <TextField fx:id="nombreField"/>
                    </HBox>
                    <HBox spacing="20">
                        <Label text="Dirección"/>
                        <TextField fx:id="direccionField"/>
                    </HBox>
                    <HBox spacing="20">
                        <Label text="Correo"/>
                        <TextField fx:id="emailField"/>
                    </HBox>
                    <HBox spacing="20">
                        <Label text="Teléfono"/>
                        <TextField fx:id="telefonoField"/>
                    </HBox>
                    <HBox spacing="20">
                        <Label text="Documento"/>
                        <TextField fx:id="documentoField"/>
                    </HBox>
                </VBox>

                <HBox alignment="CENTER" spacing="15">
                    <Button text="Cancelar" styleClass="action-button" onAction="#handleCancelar"/>
                    <Button text="Agregar cliente" styleClass="action-button" onAction="#handleAgregarCliente"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
